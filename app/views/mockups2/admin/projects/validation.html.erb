<% content_for :title, "Validation Projet - Admin - Sharifund" %>

<div class="max-w-7xl">
  <!-- Breadcrumb -->
  <nav class="mb-6">
    <ol class="text-gray-600 flex items-center gap-2 text-sm">
      <li><%= link_to "Dashboard", mockups2_admin_dashboard_path, class: "hover:text-sf-gold" %></li>
      <li><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg></li>
      <li><%= link_to "Projets", mockups2_admin_projects_path, class: "hover:text-sf-gold" %></li>
      <li><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg></li>
      <li class="text-sf-dark font-medium">Validation</li>
    </ol>
  </nav>

  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-sf-dark mb-2">Validation du projet</h1>
    <p class="text-lg text-gray-600">Restaurant halal Paris 15ème</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Analyse IA Card -->
      <div class="card bg-white rounded-lg border-2 border-sf-gold">
        <header class="p-6 bg-sf-gold-pale border-b border-sf-gold">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-sf-dark flex items-center gap-2">
              <span><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="10" x="3" y="11" rx="2"/><circle cx="12" cy="5" r="2"/><path d="M12 7v4"/><line x1="8" x2="8" y1="16" y2="16"/><line x1="16" x2="16" y1="16" y2="16"/></svg></span>
              <span>Analyse de conformité Charia (IA)</span>
            </h2>
            <span class="badge bg-sf-green text-white">Score: 92%</span>
          </div>
        </header>
        <section class="p-6">
          <!-- Score Progress -->
          <div class="mb-6">
            <div class="flex justify-between text-sm mb-2">
              <span class="font-medium">Score de conformité global</span>
              <span class="font-bold text-sf-green">92 / 100</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-4">
              <div class="bg-gradient-to-r from-sf-green to-green-400 h-4 rounded-full flex items-center justify-end pr-2" style="width: 92%">
                <span class="text-white text-xs font-semibold">Excellent</span>
              </div>
            </div>
          </div>

          <!-- Recommended Contract Type -->
          <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg mb-6">
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-600 flex-shrink-0">
                <circle cx="12" cy="12" r="10"/>
                <path d="M12 16v-4"/>
                <path d="M12 8h.01"/>
              </svg>
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">Contrat recommandé par l'IA</h3>
                <p class="text-sm text-blue-800 mb-2">
                  <strong>Mudaraba</strong> (Confiance: 94%)
                </p>
                <p class="text-xs text-blue-700">
                  Ce type de contrat est le plus adapté car le projet nécessite un financement entrepreneurial 
                  avec partage des profits selon des ratios prédéfinis.
                </p>
              </div>
            </div>
          </div>

          <!-- Compliance Factors -->
          <div class="mb-6">
            <h3 class="font-semibold text-sf-dark mb-3 flex items-center gap-2">
              <span><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg></span>
              <span>Facteurs de conformité positifs</span>
            </h3>
            <div class="space-y-2">
              <div class="flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                  <path d="M20 6 9 17l-5-5"/>
                </svg>
                <span class="text-gray-700">Activité 100% licite (restauration halal certifiée)</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                  <path d="M20 6 9 17l-5-5"/>
                </svg>
                <span class="text-gray-700">Pas de prêt à engagement (riba)</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                  <path d="M20 6 9 17l-5-5"/>
                </svg>
                <span class="text-gray-700">Transparence des flux financiers</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                  <path d="M20 6 9 17l-5-5"/>
                </svg>
                <span class="text-gray-700">Partage équitable des risques et profits</span>
              </div>
              <div class="flex items-center gap-2 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                  <path d="M20 6 9 17l-5-5"/>
                </svg>
                <span class="text-gray-700">Certification halal des fournisseurs mentionnée</span>
              </div>
            </div>
          </div>

          <!-- Red Flags (if any) -->
          <div class="mb-6">
            <h3 class="font-semibold text-sf-dark mb-3 flex items-center gap-2">
              <span><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.46 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg></span>
              <span>Points d'attention</span>
            </h3>
            <div class="space-y-2">
              <div class="flex items-start gap-2 text-sm p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-yellow-600 flex-shrink-0 mt-0.5">
                  <path d="m21.73 18-8-14a2 2 0 0 0-3.46 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/>
                  <path d="M12 9v4"/>
                  <path d="M12 17h.01"/>
                </svg>
                <span class="text-yellow-900">Vérifier la certification halal officielle du fournisseur principal</span>
              </div>
              <div class="flex items-start gap-2 text-sm p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-yellow-600 flex-shrink-0 mt-0.5">
                  <path d="m21.73 18-8-14a2 2 0 0 0-3.46 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/>
                  <path d="M12 9v4"/>
                  <path d="M12 17h.01"/>
                </svg>
                <span class="text-yellow-900">Demander précisions sur la gestion des revenus mixtes (vente alcool exclue?)</span>
              </div>
            </div>
          </div>

          <!-- Recommendations -->
          <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
            <h3 class="font-semibold text-green-900 mb-2 flex items-center gap-2">
              <span><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.8.8 1.3 1.5 1.5 2.5"/><path d="M9 18h6"/><path d="M10 22h4"/></svg></span>
              <span>Recommandations IA</span>
            </h3>
            <ul class="text-sm text-green-800 space-y-1">
              <li>• Inclure une clause explicite sur la certification halal continue</li>
              <li>• Définir clairement les ratios de partage des profits (suggestion: 60/40)</li>
              <li>• Ajouter un audit annuel de conformité Charia</li>
            </ul>
          </div>
        </section>
      </div>

      <!-- Project Details Card -->
      <div class="card bg-white rounded-lg border border-gray-200">
        <header class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-sf-dark">Détails du projet</h2>
        </header>
        <section class="p-6 space-y-4">
          <div>
            <label class="text-sm font-medium text-gray-600">Titre</label>
            <p class="font-semibold text-sf-dark">Restaurant halal Paris 15ème</p>
          </div>
          <div>
            <label class="text-sm font-medium text-gray-600">Description</label>
            <p class="text-sm text-gray-700 leading-relaxed">
              Création d'un restaurant gastronomique halal dans le 15ème arrondissement de Paris. 
              Concept unique mêlant cuisine traditionnelle et moderne, avec certification halal officielle. 
              Capacité de 60 couverts, terrasse extérieure, cuisine ouverte.
            </p>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-600">Montant recherché</label>
              <p class="font-semibold text-sf-dark text-lg">150 000 €</p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-600">Durée estimée</label>
              <p class="font-semibold text-sf-dark text-lg">24 mois</p>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-600">Type de contrat</label>
              <span class="badge bg-purple-100 text-purple-800 mt-1">Mudaraba</span>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-600">Secteur</label>
              <span class="badge bg-orange-100 text-orange-800 mt-1">Restauration</span>
            </div>
          </div>
        </section>
      </div>

      <!-- Documents Card -->
      <div class="card bg-white rounded-lg border border-gray-200">
        <header class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-sf-dark">Documents fournis</h2>
        </header>
        <section class="p-6">
          <div class="space-y-3">
            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:border-sf-gold transition-all">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-red-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-red-600">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-sm text-sf-dark">Business Plan 2024.pdf</div>
                  <div class="text-xs text-gray-600">2.4 MB • Uploadé le 15 Jan 2024</div>
                </div>
              </div>
              <button class="btn-outline btn-sm">Télécharger</button>
            </div>

            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:border-sf-gold transition-all">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-blue-600">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-sm text-sf-dark">Prévisionnel Financier.xlsx</div>
                  <div class="text-xs text-gray-600">856 KB • Uploadé le 15 Jan 2024</div>
                </div>
              </div>
              <button class="btn-outline btn-sm">Télécharger</button>
            </div>

            <div class="flex items-center justify-between p-3 border border-gray-200 rounded-lg hover:border-sf-gold transition-all">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-600">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-sm text-sf-dark">Certification Halal.pdf</div>
                  <div class="text-xs text-gray-600">1.2 MB • Uploadé le 16 Jan 2024</div>
                </div>
              </div>
              <button class="btn-outline btn-sm">Télécharger</button>
            </div>
          </div>
        </section>
      </div>

      <!-- Admin Notes -->
      <div class="card bg-white rounded-lg border border-gray-200">
        <header class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-sf-dark">Notes administratives</h2>
        </header>
        <section class="p-6">
          <form class="form space-y-4">
            <div>
              <label for="admin-notes" class="label text-sm font-medium mb-2">Commentaires de validation</label>
              <textarea id="admin-notes" rows="4" class="textarea w-full" placeholder="Ajoutez vos remarques..."></textarea>
              <p class="text-xs text-gray-600 mt-2">Ces notes seront visibles uniquement par les administrateurs</p>
            </div>
          </form>
        </section>
      </div>
    </div>

    <!-- Sidebar Actions -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Quick Info -->
      <div class="card bg-white rounded-lg border border-gray-200">
        <header class="p-6 border-b border-gray-200">
          <h2 class="font-semibold text-sf-dark">Informations rapides</h2>
        </header>
        <section class="p-6 space-y-4 text-sm">
          <div>
            <label class="text-gray-600">Soumis le</label>
            <p class="font-medium text-sf-dark">15 janvier 2024</p>
          </div>
          <div>
            <label class="text-gray-600">Entrepreneur</label>
            <p class="font-medium text-sf-dark">Ahmed K.</p>
            <p class="text-xs text-gray-600">ahmed.khalil@example.com</p>
          </div>
          <div>
            <label class="text-gray-600">Statut actuel</label>
            <span class="badge badge-warning text-xs mt-1">En analyse IA</span>
          </div>
          <div>
            <label class="text-gray-600">Documents</label>
            <p class="font-medium text-sf-dark">3 fichiers (4.5 MB)</p>
          </div>
        </section>
      </div>

      <!-- Validation Actions -->
      <div class="card bg-white rounded-lg border border-gray-200">
        <header class="p-6 border-b border-gray-200">
          <h2 class="font-semibold text-sf-dark">Actions de validation</h2>
        </header>
        <section class="p-6 space-y-3">
          <button class="btn w-full bg-sf-green text-white hover:bg-green-600 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            Valider le projet
          </a>
          
          <button class="btn-destructive w-full">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 6 6 18"/>
              <path d="m6 6 12 12"/>
            </svg>
            Rejeter le projet
          </a>

          <div class="border-t border-gray-200 pt-3">
            <button class="btn-outline w-full">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                <polyline points="17 8 12 3 7 8"/>
                <line x1="12" x2="12" y1="3" y2="15"/>
              </svg>
              Demander modifications
            </a>
          </div>
        </section>
      </div>

      <!-- Sharia Expert Consultation -->
      <div class="card bg-gradient-to-br from-sf-gold-pale to-white rounded-lg border-2 border-sf-gold">
        <section class="p-6">
          <div class="text-center mb-4">
            <div class="text-4xl mb-2">☪</div>
            <h3 class="font-semibold text-sf-dark mb-1">Consultation expert</h3>
            <p class="text-xs text-gray-600">En cas de doute sur la conformité</p>
          </div>
          <button class="btn-outline w-full text-sm">
            Contacter un expert Charia
          </a>
        </section>
      </div>
    </div>
  </div>
</div>
