<% content_for :title, "Connexion - Sharifund" %>

<div class="min-h-screen bg-gradient-to-br from-sf-gold-pale via-white to-gray-50 flex items-center justify-center p-6">
  <div class="w-full max-w-md">
    <!-- Logo -->
    <div class="text-center mb-8">
      <%= link_to mockups2_root_path, class: "inline-flex items-center gap-2 logo-sharifund text-3xl" do %>
        <%= image_tag "logo.jpg", alt: "Sharifund", class: "h-12" %>
      <% end %>
      <p class="text-gray-600 mt-2">Plateforme de financement halal</p>
    </div>

    <!-- Login Card -->
    <div class="card bg-white rounded-lg border border-gray-200 shadow-lg">
      <header class="p-6 border-b border-gray-200 text-center">
        <h1 class="text-2xl font-bold text-sf-dark mb-1">Bienvenue</h1>
        <p class="text-sm text-gray-600">Connectez-vous à votre espace</p>
      </header>
      
      <section class="p-6">
        <form class="form space-y-4">
          <div>
            <label for="email" class="label text-sm font-medium mb-2">Email</label>
            <input type="email" id="email" class="input w-full" placeholder="votre@email.com" autofocus>
          </div>

          <div>
            <label for="password" class="label text-sm font-medium mb-2">Mot de passe</label>
            <input type="password" id="password" class="input w-full" placeholder="••••••••">
          </div>

          <div class="flex items-center justify-between">
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" class="input" role="switch">
              <span class="text-sm text-gray-600">Se souvenir de moi</span>
            </label>
            <a href="#" class="text-sm text-sf-gold hover:text-sf-gold-light">Mot de passe oublié?</a>
          </div>

          <button type="submit" class="btn w-full bg-sf-gold text-sf-black hover:bg-sf-gold-light transition-colors">
            Se connecter
          </a>
        </form>

        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-white text-gray-600">Ou</span>
          </div>
        </div>

        <button class="btn-outline w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          Continuer avec Google
        </a>
      </section>

      <footer class="p-6 border-t border-gray-200 text-center">
        <p class="text-sm text-gray-600">
          Pas encore de compte? 
          <%= link_to "Créer un compte", mockups2_auth_register_path, class: "text-sf-gold hover:text-sf-gold-light font-medium" %>
        </p>
      </footer>
    </div>

    <!-- Footer Links -->
    <div class="text-center mt-8 text-sm text-gray-600">
      <a href="#" class="hover:text-sf-gold">Conditions d'utilisation</a>
      <span class="mx-2">•</span>
      <a href="#" class="hover:text-sf-gold">Politique de confidentialité</a>
    </div>
  </div>
</div>
