<% content_for :title, "Modifier mon profil - Entrepreneur - Sharifund" %>

<div class="max-w-4xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-sf-dark mb-2">Mon profil entrepreneur</h1>
    <p class="text-lg text-gray-600">Gérez vos informations professionnelles</p>
  </div>

  <form class="form space-y-6">
    <!-- Personal Info -->
    <div class="card bg-white rounded-lg border border-gray-200">
      <header class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-sf-dark">Informations personnelles</h2>
      </header>
      <section class="p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="first_name" class="label text-sm font-medium mb-2">Prénom</label>
            <input type="text" id="first_name" class="input w-full" value="Ahmed">
          </div>
          <div>
            <label for="last_name" class="label text-sm font-medium mb-2">Nom</label>
            <input type="text" id="last_name" class="input w-full" value="Khalil">
          </div>
        </div>

        <div>
          <label for="email" class="label text-sm font-medium mb-2">Email</label>
          <input type="email" id="email" class="input w-full" value="ahmed.khalil@example.com" disabled>
          <p class="text-xs text-gray-600 mt-1">L'email ne peut pas être modifié</p>
        </div>

        <div>
          <label for="phone" class="label text-sm font-medium mb-2">Téléphone</label>
          <input type="tel" id="phone" class="input w-full" value="+33 6 12 34 56 78">
        </div>
      </section>
    </div>

    <!-- Company Info -->
    <div class="card bg-white rounded-lg border border-gray-200">
      <header class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-sf-dark">Informations entreprise</h2>
      </header>
      <section class="p-6 space-y-4">
        <div>
          <label for="company_name" class="label text-sm font-medium mb-2">Nom de l'entreprise *</label>
          <input type="text" id="company_name" class="input w-full" value="Restaurant Khalil & Co">
        </div>

        <div>
          <label for="siret" class="label text-sm font-medium mb-2">SIRET</label>
          <input type="text" id="siret" class="input w-full" placeholder="123 456 789 00012">
        </div>

        <div>
          <label for="sector" class="label text-sm font-medium mb-2">Secteur d'activité</label>
          <select id="sector" class="select w-full">
            <option value="restauration" selected><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg> Restauration</option>
            <option value="tech"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg> Technologie</option>
            <option value="immobilier"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg> Immobilier</option>
            <option value="commerce"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg> Commerce</option>
          </select>
        </div>

        <div>
          <label for="bio" class="label text-sm font-medium mb-2">Bio professionnelle</label>
          <textarea id="bio" rows="4" class="textarea w-full" placeholder="Présentez votre parcours et votre entreprise...">Fort de 15 ans d'expérience dans la restauration, dont 8 ans comme chef dans des établissements étoilés...</textarea>
          <p class="text-xs text-gray-600 mt-1">Cette bio sera visible sur tous vos projets</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="website" class="label text-sm font-medium mb-2">Site web</label>
            <input type="url" id="website" class="input w-full" placeholder="https://...">
          </div>
          <div>
            <label for="linkedin" class="label text-sm font-medium mb-2">LinkedIn</label>
            <input type="url" id="linkedin" class="input w-full" placeholder="https://linkedin.com/in/...">
          </div>
        </div>
      </section>
    </div>

    <!-- Form Actions -->
    <div class="flex gap-3">
      <button type="button" class="btn-outline">Annuler</a>
      <button type="submit" class="btn bg-sf-gold text-sf-black hover:bg-sf-gold-light flex-1">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
          <polyline points="17 21 17 13 7 13 7 21"/>
          <polyline points="7 3 7 8 15 8"/>
        </svg>
        Enregistrer les modifications
      </a>
    </div>
  </form>
</div>
