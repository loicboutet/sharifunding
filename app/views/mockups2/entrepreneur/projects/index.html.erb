    </div>
    <%= link_to mockups2_entrepreneur_new_project_path, class: "btn bg-sf-gold text-sf-black hover:bg-sf-gold-light transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
