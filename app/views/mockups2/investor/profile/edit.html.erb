<% content_for :title, "Modifier mon profil - Investisseur - Sharifund" %>

<div class="max-w-4xl mx-auto">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-sf-dark mb-2">Mon profil investisseur</h1>
    <p class="text-lg text-gray-600">Gérez vos préférences d'investissement</p>
  </div>

  <form class="form space-y-6">
    <!-- Personal Info -->
    <div class="card bg-white rounded-lg border border-gray-200">
      <header class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-sf-dark">Informations personnelles</h2>
      </header>
      <section class="p-6 space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="first_name" class="label text-sm font-medium mb-2">Prénom</label>
            <input type="text" id="first_name" class="input w-full" value="Mohammed">
          </div>
          <div>
            <label for="last_name" class="label text-sm font-medium mb-2">Nom</label>
            <input type="text" id="last_name" class="input w-full" value="Hassan">
          </div>
        </div>

        <div>
          <label for="email" class="label text-sm font-medium mb-2">Email</label>
          <input type="email" id="email" class="input w-full" value="mohammed.h@example.com" disabled>
        </div>

        <div>
          <label for="phone" class="label text-sm font-medium mb-2">Téléphone</label>
          <input type="tel" id="phone" class="input w-full" value="+33 6 98 76 54 32">
        </div>
      </section>
    </div>

    <!-- Investment Profile -->
    <div class="card bg-white rounded-lg border border-gray-200">
      <header class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-sf-dark">Profil d'investissement</h2>
      </header>
      <section class="p-6 space-y-6">
        <div>
          <label class="label text-sm font-medium mb-3">Type d'investisseur *</label>
          <div class="space-y-3">
            <label class="flex items-center gap-3 p-4 border-2 border-sf-gold bg-sf-gold-pale rounded-lg cursor-pointer">
              <input type="radio" name="investor_type" value="individual" checked class="input">
              <div>
                <div class="font-semibold text-sf-dark">Investisseur individuel</div>
                <p class="text-sm text-gray-600">J'investis à titre personnel</p>
              </div>
            </label>

            <label class="flex items-center gap-3 p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-sf-gold">
              <input type="radio" name="investor_type" value="institutional" class="input">
              <div>
                <div class="font-semibold text-sf-dark">Institutionnel</div>
                <p class="text-sm text-gray-600">Je représente une institution financière</p>
              </div>
            </label>

            <label class="flex items-center gap-3 p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-sf-gold">
              <input type="radio" name="investor_type" value="family_office" class="input">
              <div>
                <div class="font-semibold text-sf-dark">Family Office</div>
                <p class="text-sm text-gray-600">Je gère un patrimoine familial</p>
              </div>
            </label>
          </div>
        </div>

        <div>
          <label for="capacity" class="label text-sm font-medium mb-2">Capacité d'investissement</label>
          <select id="capacity" class="select w-full">
            <option value="10k_50k" selected>10 000 € - 50 000 €</option>
            <option value="50k_100k">50 000 € - 100 000 €</option>
            <option value="100k_500k">100 000 € - 500 000 €</option>
            <option value="over_500k">Plus de 500 000 €</option>
          </select>
        </div>

        <div>
          <label class="label text-sm font-medium mb-3">Secteurs préférés</label>
          <div class="grid grid-cols-2 gap-3">
            <label class="flex items-center gap-2 p-3 border border-gray-200 rounded-lg cursor-pointer hover:border-sf-gold">
              <input type="checkbox" class="input" checked>
              <span class="text-sm"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3Zm0 0v7"/></svg> Restauration</span>
            </label>
            <label class="flex items-center gap-2 p-3 border border-gray-200 rounded-lg cursor-pointer hover:border-sf-gold">
              <input type="checkbox" class="input" checked>
              <span class="text-sm"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="7" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg> Technologie</span>
            </label>
            <label class="flex items-center gap-2 p-3 border border-gray-200 rounded-lg cursor-pointer hover:border-sf-gold">
              <input type="checkbox" class="input">
              <span class="text-sm"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg> Immobilier</span>
            </label>
            <label class="flex items-center gap-2 p-3 border border-gray-200 rounded-lg cursor-pointer hover:border-sf-gold">
              <input type="checkbox" class="input">
              <span class="text-sm"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"/><path d="M3 6h18"/><path d="M16 10a4 4 0 0 1-8 0"/></svg> Commerce</span>
            </label>
          </div>
        </div>

        <div>
          <label class="label text-sm font-medium mb-3">Types de contrats préférés</label>
          <div class="space-y-2">
            <label class="flex items-center gap-2">
              <input type="checkbox" class="input" checked>
              <span class="text-sm">Mudaraba (Commandite)</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="input" checked>
              <span class="text-sm">Musharaka (Partenariat)</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" class="input">
              <span class="text-sm">Murabaha (Vente à tempérament)</span>
            </label>
          </div>
        </div>

        <div>
          <label for="bio" class="label text-sm font-medium mb-2">Bio</label>
          <textarea id="bio" rows="4" class="textarea w-full">Investisseur passionné par les projets conformes à l'éthique islamique...</textarea>
        </div>
      </section>
    </div>

    <!-- Form Actions -->
    <div class="flex gap-3">
      <button type="button" class="btn-outline">Annuler</button>
      <button type="submit" class="btn bg-sf-gold text-sf-black hover:bg-sf-gold-light flex-1">
        Enregistrer les modifications
      </a>
    </div>
  </form>
</div>
