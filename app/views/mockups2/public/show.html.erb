            <div class="flex justify-between">
              <span class="text-gray-600">Rentabilité estimée</span>
              <span class="font-bold text-sf-green">12% / an</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Durée</span>
              <span class="font-medium text-gray-700">24 mois</span>
            </div>
          </section>
        </div>

        <!-- Sharia Compliance -->
        <div class="card bg-green-50 rounded-lg border-2 border-sf-green">
          <header class="p-6 border-b border-green-200">
            <h2 class="font-semibold text-green-900 flex items-center gap-2">
              <span>☪</span>
              <span>Conformité Charia</span>
            </h2>
          </header>
          <section class="p-6 space-y-3 text-sm">
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
              <span class="text-green-900">Activité 100% licite</span>
            </div>
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
              <span class="text-green-900">Pas de riba (intérêt)</span>
            </div>
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
              <span class="text-green-900">Certification halal</span>
            </div>
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-sf-green">
                <path d="M20 6 9 17l-5-5"/>
              </svg>
              <span class="text-green-900">Partage équitable des risques</span>
