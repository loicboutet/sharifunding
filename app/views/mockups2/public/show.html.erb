            <div class="flex justify-between">
              <span class="text-gray-600">Montant recherché</span>
              <span class="font-bold text-sf-dark">150 000 €</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Montant simulé</span>
              <span class="font-semibold text-sf-gold">125 000 €</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Reste à financer</span>
              <span class="font-medium text-gray-700">25 000 €</span>
            </div>
